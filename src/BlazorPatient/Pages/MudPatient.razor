@page "/Patients"
@using BlazorPatient.DTO
@inject Infrastructure.Services.IPatientService PatientService
@inject ISnackbar SnackBar
@inject NavigationManager NavigationManager

@if (_patients.Count is 0)
{
    <MudCard Elevation="25">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Variant="Variant.Text" Typo="Typo.h6">No patient found.</MudText>
            </CardHeaderContent>
        </MudCardHeader>
    </MudCard>
}
else
{
    <MudTable T="PatientDto" Elevation="25" Items="_patients" Filter="new Func<PatientDto, bool>(SearchPatient)" @bind-patient="_patient" Dense="true" Hover="true" Striped="true" OnRowClick="@(args => OnRowClicked(args))">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Patient</MudText>
            <MudToolBarSpacer />
            <MudTextField @bind-Value="searchString"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Placeholder="Search for Patient..."
                          IconSize="Size.Medium" Class="mt-0">
            </MudTextField>
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Given Name</MudTh>
            <MudTh>Family Name</MudTh>
            <MudTh>Date Of Birth</MudTh>
            <MudTh>Gender</MudTh>
            <MudTh>Home Address</MudTh>
            <MudTh>Phone Number</MudTh>
            <MudTh>Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Id">@context.Id</MudTd>
            <MudTd DataLabel="GivenName">@context.GivenName</MudTd>
            <MudTd DataLabel="FamilyName">@context.FamilyName</MudTd>
            <MudTd DataLabel="DateOfBirth">@context.DateOfBirth</MudTd>
            <MudTd DataLabel="Gender">@context.Gender</MudTd>
            <MudTd DataLabel="HomeAddress">@context.HomeAddress</MudTd>
            <MudTd DataLabel="PhoneNumber">@context.PhoneNumber</MudTd>
            <MudTd DataLabel="">
                <MudFab @onclick="@(()=>EditPatient(@context.Id))" Color="Color.Primary" Icon="@Icons.Material.Filled.Edit" Size="Size.Small" IconSize="Size.Small" />
            </MudTd>
        </RowTemplate>
    </MudTable>
}
<br />
<MudCard Elevation="25">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Add / Edit Patient</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudTextField @bind-Value="_patient.Id" Label="Id" Variant="Variant.Text" Margin="Margin.Normal" Disabled="true" />
        <MudTextField @bind-Value="_patient.GivenName" Label="Given Name" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudTextField @bind-Value="_patient.FamilyName" Label="Family Name" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
        <MudDatePicker @bind-Date="_patient.DateOfBirth"
                       Color="Color.Info"
                       DisableToolbar="true"
                       Label="Date Of Birth"
                       MinDate="DateTime.Now.Subtract(new TimeSpan(876600,0,0))"
                       TitleDateFormat="dd MMM" />
        <MudSelect @bind-Value="_patient.Gender" Label="Gender" Variant="Variant.Text" Margin="Margin.Normal">
            @foreach (Gender item in Enum.GetValues(typeof(Gender)))
            {
                <MudSelectItem T="Gender?" Value="@item" />
            }
        </MudSelect>
        <MudTextField @bind-Value="_patient.HomeAddress" Label="Home Address" Variant="Variant.Text" Margin="Margin.Normal" />
        <MudTextField @bind-Value="_patient.PhoneNumber" Label="Phone Number" Variant="Variant.Text" Margin="Margin.Normal" />
        <br />
        <MudButton Variant="Variant.Filled" Color="Color.Info" OnClick="SavePatient">Save Patient</MudButton>
    </MudCardContent>
</MudCard>

@code{
    private string searchString = "";
    private PatientDto _patient = new();
    private List<PatientDto> _patients = new();

    protected override async Task OnInitializedAsync()
    {
        _patients = await PatientService.Get();
    }

    private bool SearchPatient(PatientDto patientParam)
    {
        if (string.IsNullOrWhiteSpace(searchString)) return true;
        return patientParam.GivenName.Contains(searchString, StringComparison.OrdinalIgnoreCase)
               || patientParam.FamilyName.Contains(searchString, StringComparison.OrdinalIgnoreCase)
               || patientParam.PhoneNumber.Contains(searchString, StringComparison.OrdinalIgnoreCase);
    }
    private async Task GetPatients()
    {
        _patients = await PatientService.Get();
    }
    private async Task SavePatient()
    {
        int result = await PatientService.Save(_patient);
        var cachePatient = _patient;
        _patient = new PatientDto();
        switch (result)
        {
            case 0:
                SnackBar.Add("Something went wrong.", Severity.Error);
                _patient = cachePatient;
                break;
            case 1:
                SnackBar.Add("Patient Saved.", Severity.Success);
                break;
            case 2:
                SnackBar.Add("Patient Updated.", Severity.Success);
                break;
        }
        await GetPatients();
    }

    private void EditPatient(int id)
    {
        _patient = _patients.FirstOrDefault(p => p.Id == id);
    }

    private void OnRowClicked(TableRowClickEventArgs<PatientDto> args)
    {
        NavigationManager.NavigateTo($"/Patients/{args.Item.Id}");
    }
}