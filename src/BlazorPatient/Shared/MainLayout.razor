    async Task DarkMode()
    {
        if (_currentTheme == _defaultTheme)
        {
            _currentTheme = _darkTheme;
            await LocalStorage.SetItemAsync("DarkMode", true);
        }
        else
        {
            _currentTheme = _defaultTheme;
            await LocalStorage.SetItemAsync("DarkMode", false);
        }
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

